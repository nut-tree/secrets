{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "typeRoots": ["./node_modules/@types/", "./lib/types/"],
    "outDir": "./dist",
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "lib/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
